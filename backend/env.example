# GCP Configuration
PROJECT_ID=your-gcp-project-id
LOCATION=us-east1

# RAG Corpus Configuration
# Full resource name format: projects/PROJECT_ID/locations/LOCATION/ragCorpora/CORPUS_ID
RAG_CORPUS_NAME=projects/your-project-id/locations/us-east1/ragCorpora/your-corpus-id

# GCS Bucket Configuration
# Default bucket for document ingestion
GCS_BUCKET_NAME=your-bucket-name

# Google Cloud Authentication
# Optional: Path to service account JSON key file (only needed if not using ADC)
# If not set, will use Application Default Credentials (gcloud auth application-default login)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Server Configuration
PORT=8080

# MCP Authentication Configuration (FastMCP 2.0)
# FastMCP 2.0 uses auth providers instead of token verifiers
# Enable MCP authentication (default: False for local testing)
# When enabled, requires FastMCP 2.0 auth provider implementation
# See: https://gofastmcp.com/ for auth provider documentation
# MCP_REQUIRE_AUTH=false

# Token validation settings (reserved for future auth provider implementation)
# MCP_TOKEN_ISSUER=http://localhost:8080
# MCP_TOKEN_AUDIENCE=vertex-rag-mcp

# Optional: RSA key pair for JWT signing/verification (reserved for future auth provider implementation)
# MCP_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----
# MCP_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# Chat API Configuration (LangChain + OpenAI)
# Required: OpenAI API key for chat model access
OPENAI_API_KEY=your-openai-api-key-here
# Optional: Model ID override (default: gpt-4o-mini)
# CHAT_MODEL_ID=gpt-4o-mini

# MCP Integration Configuration
# URL of the MCP server endpoint (default: http://localhost:8080/mcp)
# MCP_SERVER_URL=http://localhost:8080/mcp
# MCP transport type (default: streamable_http)
# MCP_TRANSPORT=streamable_http
# Enable MCP tools in chat endpoints (default: True)
# USE_MCP_IN_CHAT=true


# LangSmith Configuration (for evaluations and tracing)
# API Key for LangSmith
LANGCHAIN_API_KEY=your-langsmith-api-key
# Enable tracing (set to true)
LANGCHAIN_TRACING_V2=true
# Project name (optional, defaults to default)
# LANGCHAIN_PROJECT=segov-dev
